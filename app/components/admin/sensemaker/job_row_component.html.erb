<tr class="<%= css_classes %>" data-job-id="<%= job.id %>">
  <td>
    <%= link_to "Job ##{job.id}", admin_sensemaker_job_path(job), class: "job-link" %>
    <%= content_tag :p, commentable_title %>
  </td>
  <td><%= job.script %></td>
  <% if job.running? %>
    <td><%= job.started_at.strftime("%Y-%m-%d %H:%M") %></td>
  <% else %>
    <td>
      <%= content_tag :span, "", class: "job-status-indicator #{job_status_class}" %>
      <%= content_tag :span, status_text, class: "meta" %>
    </td>
    <td>
      <div class="flex-row-end">
        <%= link_to("Download Output", download_admin_sensemaker_job_path(job), class: "button small inline-block") if can_download? %>
        <%= link_to "Delete", admin_sensemaker_job_path(job), class: "button error small inline-block", method: :delete, data: { confirm: t("admin.sensemaker.delete_alert") } %>
      </div>
    </td>
  <% end %>
</tr>
